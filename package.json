{
  "name": "qtlogs",
  "version": "1.0.0",
  "description": "Tool to use MQTT for application logging",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,json --exec \"node --trace-warnings --loader ts-node/esm src/index.ts\""
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "node --loader ts-node/esm"
    },
    "ext": "ts,json",
    "watch": [
      "src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ausward/QTLogs.git"
  },
  "author": "Austin Ward",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/ausward/QTLogs/issues"
  },
  "homepage": "https://github.com/ausward/QTLogs#readme",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "express": "^5.1.0",
    "mqtt": "^5.14.1",
    "nodemon": "^3.1.11"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
